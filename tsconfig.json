{
	"extends": "ts-node/node16/tsconfig.json",
	"ts-node": {
		"swc": true
	},
	"compilerOptions": {
		/* Language and Environment */
		"target": "es2016",

		/* Modules */
		"module": "commonjs",

		/* Emit */
		"outDir": "./dist",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,

		/* Completeness */
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
